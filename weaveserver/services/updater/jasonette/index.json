{
    "type": "vertical",
    "items": {
        "{{#each views}}": {
            "type": "vertical",
            "style": {
            "background": [
                {
                "{{#if (active)}}": "red"
                },
                {
                "{{#else}}": "rgba(0, 0, 0, 200)"
                }
            ],
            "padding": "5",
            "spacing": "13",
            "align": "center",
            "distribution": "equalspacing",
            "height": "120"
            },
            "components": [
            {
                "type": "image",
                "url": "$APP_ROOT/favicon.png",
                "style": {
                "width": "76",
                "height": "76",
                "corner_radius": "5"
                }
            },
            {
                "type": "label",
                "text": "{{name}}",
                "style": {
                "size": "12"
                }
            }
            ]
        }
    }
}
