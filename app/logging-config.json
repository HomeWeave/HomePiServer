{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
        }
    },
    "handlers": {
        "default": {
            "level": "INFO",
            "formatter": "standard",
            "class": "logging.StreamHandler"
        },
        "file": {
                "class": "logging.handlers.RotatingFileHandler",
                "level": "DEBUG",
                "formatter": "standard",
                "filename": "/var/log/piserver/server.log",
                "mode": "a",
                "maxBytes": 10485760,
                "backupCount": 5
        }
    },
    "loggers": {
        "": {
            "handlers": ["file"],
            "level": "INFO",
            "propagate": true
        },
        "stdout": {
            "handlers": ["file"],
            "level": "INFO",
            "propagate": true
        },
        "werkzeug": {
            "handlers": ["file"],
            "level": "INFO",
            "propagate": true
        }
    }
}
